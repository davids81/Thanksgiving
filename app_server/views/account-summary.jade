extends layout

block content
  .row.page-header
    .col-lg-12
      h1=account.name
  .row.list-group
    .col-xs-12.col-sm-10
      each registrant in account.registrants 
        .list-group-item
          .row
            .col-xs-12.col-sm-4
              p.list-group-item-heading Volunteer: 
              h4
                a(href='/newuser')=registrant.name
            .col-xs-12.col-sm-4
              p.list-group-item-heading Position:
              h4
                a(href='/availablepositions')=registrant.positionName
            .col-xs-12.col-sm-4
              p.list-group-item-heading Time:
              h4=registrant.positionTime
          hr
          .row.col-xs-12.hidden-xs
            p.list-group-item-heading Position Description
            p=registrant.positionDescription
          .row
            .col-xs-12
              button.btn.btn-default.btn-block Delete Person 
  .row
    .col-xs-12
      span.glyphicon.glyphicon-plus
      a.lead(href='/newuser') Add New User

        
        