      .panel.panel-primary
        .panel-heading
          .h2.panel-title Server
        .panel-body
          form(action='/', method='post', role='form')
            input(type='hidden', name='position_id', value='123456')
            .col-xs-12.col-sm-4        
              span.lead Available Times:
              .row
                .radio
                  label
                    input(type="radio", name="optradio" value="0")
